<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="epi.pfa.medicalcenter.LoginActivity"
    android:background="@color/vert">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/loginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:src="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/loginName"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_alignStart="@+id/loginPassword"
            android:layout_below="@+id/loginLabel"
            android:layout_marginTop="49dp"
            android:background="@color/Grey"
            android:hint="Username" />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/loginName"
            android:layout_marginEnd="61dp"
            android:layout_marginTop="29dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@color/Grey"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:layout_above="@+id/registerbtn"
            android:layout_alignStart="@+id/loginPassword"
            android:layout_marginBottom="25dp"
            android:text="Login"
            android:textColor="@color/vert" />


        <Button
            android:id="@+id/registerbtn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/loginBtn"
            android:layout_marginBottom="35dp"
            android:background="@drawable/rounded_corner_grey"

            android:text="Register"
            android:textColor="@color/vert"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/loginName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/ic_user_name" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/loginPassword"
            app:srcCompat="@android:drawable/ic_secure" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
