<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.Dark.ActionBar"
    tools:context="epi.pfa.medicalcenter.ContactActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewsubject"
            android:layout_width="91dp"
            android:layout_height="38dp"
            android:layout_above="@+id/editTextsubject"
            android:layout_alignEnd="@+id/textViewmessage"
            android:text="Subject :"
            android:textColor="@color/primary"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/textViewmessage"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:layout_above="@+id/editTextmsg"
            android:layout_alignStart="@+id/editTextmsg"
            android:layout_marginBottom="61dp"
            android:text="Message :"
            android:textColor="@color/primary"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/editTextsubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewmessage"
            android:layout_alignStart="@+id/textViewmessage"
            android:layout_marginBottom="31dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Your Subject"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            />

        <EditText
            android:id="@+id/editTextmsg"
            android:layout_width="303dp"
            android:layout_height="131dp"
            android:layout_above="@+id/btnSend"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"
            android:text="Send"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
