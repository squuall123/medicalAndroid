<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="epi.pfa.medicalcenter.ContactActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewsubject"
            android:layout_width="91dp"
            android:layout_height="38dp"
            android:layout_above="@+id/editTextsubject"
            android:layout_alignEnd="@+id/textViewmessage"
            android:text="Subject :"
            android:textColor="@color/headings"
            android:textSize="11sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/textViewmessage"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:layout_above="@+id/editTextmsg"
            android:layout_alignStart="@+id/editTextmsg"
            android:layout_marginBottom="61dp"
            android:text="Message :"
            android:textColor="@color/headings"
            android:textSize="11sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="155dp" />

        <EditText
            android:id="@+id/editTextsubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewmessage"
            android:layout_alignStart="@+id/textViewmessage"
            android:layout_marginBottom="31dp"
            android:ems="10"
            android:inputType="text"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="84dp" />

        <EditText
            android:id="@+id/editTextmsg"
            android:layout_width="303dp"
            android:layout_height="131dp"
            android:layout_above="@+id/btnSend"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="216dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"
            android:background="@drawable/rounded_corner_grey"
            android:text="Send"
            android:textColor="@color/vert"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="380dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
